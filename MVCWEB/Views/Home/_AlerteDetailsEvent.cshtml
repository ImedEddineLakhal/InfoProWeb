@model MVCWEB.Models.EventViewModel

<div class="modal fade" id="alerteDetails" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h5>@Html.DisplayFor(modelItem => modelItem.titre)</h5>

            </div>

            <div class="modal-body">
                <div class="panel panel-flat">
                    <div class="panel-body">

                        <h5>Description:@Html.DisplayFor(modelItem => modelItem.description)</h5>
                        <h5>Date de Debut:@Html.DisplayFor(modelItem => modelItem.dateDebut)</h5>
                        <h5>Date de fin:@Html.DisplayFor(modelItem => modelItem.dateFin)</h5>

                        @using (Html.BeginForm("DeleteEvent", "Home", new { id = Model.Id }, FormMethod.Get, new { enctype = "multipart/form-data" }))
                        {
                                    <input type="submit" value="Delete" class="btn btn-danger" />                                
                        }
                        <!-- /basic radar chart -->
                    </div>
               </div>
        </div>
    </div>
</div>
</div>