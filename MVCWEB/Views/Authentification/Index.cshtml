@model MVCWEB.Models.UserAuthentif



@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout_authentification.cshtml";
}
@section test2{

    @using (Html.BeginForm("Connect", "Authentification", FormMethod.Post))
    {
        @*@Html.AntiForgeryToken()*@

        <hr />

        <div class="form-horizontal well">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-xs-6">
                    @Html.Label("LOGIN", htmlAttributes: new { @class = "control-label col-md-2", style = "font-size:15px;font-family: Arial;font-weight:Bold" })
                </div>
                <div class="col-xs-6">
                    @Html.EditorFor(model => model.login, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.login, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-xs-6">
                    @Html.Label("PASSWORD", htmlAttributes: new { @class = "control-label col-md-2", style = "font-size:15px;font-family:Arial;font-weight:Bold" })
                </div>
                <div class="col-xs-6">
                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-12">
                    <input type="submit" value="Login" class="btn btn-primary" style="width:230px;" />
                </div>
            </div>
            @{
                ViewBag.Title = "Test me";

            }
            <font color="@ViewBag.color">@ViewBag.message</font>
        </div>
                }
}
